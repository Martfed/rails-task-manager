<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task)%> |
      <% if task.completed%>
        <%= 'status: ✔'  %>
      <% else %>
        <%= 'status: ❌'  %>
      <% end %>
      <%= link_to '🗑', delete_task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<p><%= link_to "+ add another item", "tasks/new" %></p>
